.top-box
    position: relative;
    display: block;
    width: 100%;
    height: 70px;
    line-height: 70px;
    font-size: 0;
    color: #ffffff;
    background-color: #333;
    .logo
        display: inline-block;
        width: 150px;
        margin-left: 20px;
        text-align: center;
        font-size: 22px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        letter-spacing: 1px;
        a
            &:hover
                color: red;
    .m-nav
        display: inline-block;
        margin: 0;
        padding: 0;
        font-size: 14px;
        ul
            width: 100%;
            li
                display: inline-block;
                padding: 0 20px;
                &:hover
                    background-color: #000000;
    .m-control
        display: inline-block;
        font-size: 18px;
        float: right;
        margin-right :20px;