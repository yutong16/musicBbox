.top-box
    position: relative;
    display: block;
    width: 100%;
    height: 70px;
    line-height: 70px;
    font-size: 0;
    color: #ffffff;
    background-color: #333;
    .logo
        display: inline-block;
        width: 176px;
        height: 70px;
        margin-left: 20px;
        text-align: center;
        float: left;
        font-size: 0;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        letter-spacing: 1px;
        a
            font-size: 22px;
            &:hover
                color: red;
    .m-nav
        display: inline-block;
        float: left;
        margin: 0;
        padding: 0;
        height: 70px;
        line-height: 70px;
        font-size: 14px;
        ul
            width: 100%;
            li
                display: inline-block;
                padding: 0 20px;
                &:hover
                    background-color: #000000;
                .down
                    display: block;
                    position: relative;
                    .down-client
                        height: 70px;
                        line-height: 70px;
                        font-size: 14px;
                    .hot
                        display: block;
                        position: absolute;
                        width: 28px;
                        top: 21px;
                        height: 11px;
                        left: 80px;
                        font-size: 12px;
                        background-image: url('../../assets/icon/hot_bg.gif');
                        background-repeat: no-repeat;
    .m-control
        display: inline-block;
        font-size: 18px;
        float: right;
        margin-right :80px;
        .m-search
            display: inline-block;
            height: 32px;
            margin-right: 20px;
        .m-login
            display: inline-block;
            height: 70px;
            line-height: 70px;
            a
                font-size: 14px;
            .login-item
                display: block;
                width: 50px;
                margin-bottom: 20px;